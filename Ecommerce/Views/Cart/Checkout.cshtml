@model Order

@{
    var products = ViewData["Products"] as List<ProductCartViewModel>;
}

<!--Checkout page section-->
<div class="checkout_section" id="accordion" style="margin-top:200px">
    <div class="container">
        @if (string.IsNullOrEmpty(Model.CouponCode))
        {
            <div class="returning_coupon_area">
                <div class="row">
                    <div class="col-lg-5 col-md-6">
                        <div class="user-actions">
                            @if (TempData["message"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["message"]
                                </div>
                            }

                            <h3>
                                <i class="fa fa-comment-o" aria-hidden="true"></i>
                                Have a Coupon ?
                                <a class="Returning" href="#" data-toggle="collapse" data-target="#checkout_coupon2" aria-expanded="true">Click here to enter your code</a>

                            </h3>
                            <div id="checkout_coupon2" class="collapse" data-parent="#accordion">
                                <div class="checkout_info coupon_info">
                                    <form asp-action="ApplyCouponCode" method="post">
                                        <input placeholder="Coupon code" type="text" name="couponCode">
                                        <button class="btn btn-primary" type="submit">Apply coupon</button>
                                    </form>
                                    <br/>
                                    @if (TempData["message"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @TempData["message"]
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <form action="/cart/SubmitOrder" method="post">
            @if (!string.IsNullOrEmpty(Model.CouponCode))
            {
                <input type="hidden" asp-for="CouponCode"/>
            }
            <input type="hidden" asp-for="UserId"/>
            <input type="hidden" asp-for="Email"/>

            <div class="checkout_form">
                <div class="row">
                    <div class="col-lg-7 col-md-6">

                        <h3>Billing Details</h3>
                        <div class="checkout_form_input">
                            <label for="country">country <span>*</span></label>
                            <select class="select_option" asp-for="Country" id="country">
                                <option value="2">United Kingdom (UK) </option>
                                <option value="3">Algeria</option>
                                <option value="4">Afghanistan</option>
                                <option value="5">Ghana</option>
                                <option value="6">Albania</option>
                                <option value="7">Bahrain</option>
                                <option value="8">Colombia</option>
                                <option value="9">Dominican Republic</option>
                            </select>
                        </div>
                        <div class="checkout_form_input">
                            <label>First Name <span>*</span></label>
                            <input type="text" asp-for="FirstName">
                        </div>
                        <div class="checkout_form_input">
                            <label>Last Name <span>*</span></label>
                            <input type="text" asp-for="LastName">
                        </div>
                        <div class="checkout_form_input">
                            <label>Company Name</label>
                            <input type="text" asp-for="CompanyName">
                        </div>
                        <div class="checkout_form_input">
                            <label>Address <span>*</span></label>
                            <input type="text" asp-for="Address">
                        </div>
                        <div class="checkout_form_input">
                            <label>Town / City <span>*</span></label>
                            <input type="text" asp-for="City">
                        </div>
                        <div class="checkout_form_input">
                            <label> Phone <span>*</span></label>
                            <input type="text" asp-for="Phone">
                        </div>
                        <div class="checkout_form_input">
                            <label> Comment <span>*</span></label>
                            <input type="text" asp-for="Comment">
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <div class="order_table_right">
                            <h3>Your order</h3>
                            <div class="order_table table-responsive">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in products)
                                    {
                                        <tr>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>
                                                $@item.RowSumPrice.GetValueOrDefault().ToString("F")
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td>Cart Subtotal </td>
                                        <td class="text-right">
                                            $@products.Sum(x => x.RowSumPrice)?.ToString("F")
                                        </td>
                                    </tr>
                                    @if (Model.Shipping != null)
                                    {
                                        <tr>
                                            <td>Shipping </td>
                                            <td class="text-right">$@Model.Shipping?.ToString("F")</td>
                                        </tr>
                                    }

                                    @if (!string.IsNullOrEmpty(Model.CouponCode))
                                    {
                                        <tr>
                                            <td>
                                                Discount - &nbsp; @Model.CouponCode &nbsp; &nbsp;
                                                <a href="/cart/checkout">
                                                    <i class="ion-android-close"></i>
                                                </a>
                                            </td>
                                            <td class="text-right">
                                                $@Model.CouponDiscount?.ToString("F")
                                            </td>
                                        </tr>
                                    }

                                    <tr class="order_total">
                                        <th>Order Total</th>
                                        @{
                                            var orderTotal = (products.Sum(x => x.RowSumPrice) + Model.Shipping);
                                            if (Model.CouponDiscount != null)
                                            {
                                                orderTotal -= Model.CouponDiscount;
                                            }
                                        }
                                        <td class="text-right">$@orderTotal?.ToString("F")</td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="place_order_btn">
                                <input class="btn btn-primary btn-block" type="submit" value="place order"/>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </form>
    </div>
</div>
<!--Checkout page section end-->